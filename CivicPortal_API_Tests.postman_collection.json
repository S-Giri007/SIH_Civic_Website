{
  "info": {
    "name": "CivicPortal API Tests",
    "description": "Test collection for CivicPortal API deployed on Render",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "https://your-app-name.onrender.com",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Create Issue",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Test Pothole\",\n  \"description\": \"Large pothole on Main Street causing traffic issues\",\n  \"category\": \"road\",\n  \"location\": \"Main Street, Downtown\",\n  \"locationCoordinates\": {\n    \"lat\": 40.7128,\n    \"lng\": -74.0060\n  },\n  \"citizenName\": \"John Doe\",\n  \"citizenContact\": \"john.doe@email.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/issues",
          "host": ["{{baseUrl}}"],
          "path": ["api", "issues"]
        }
      }
    },
    {
      "name": "Get All Issues",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/issues",
          "host": ["{{baseUrl}}"],
          "path": ["api", "issues"]
        }
      }
    },
    {
